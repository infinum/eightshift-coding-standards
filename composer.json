{
  "name": "infinum/coding-standards-wp",
  "type": "phpcodesniffer-standard",
  "description": "Infinum Coding Standards for WordPress",
  "keywords": [
    "phpcs",
    "standards",
    "WordPress",
    "Infinum",
    "Eightshift"
  ],
  "homepage": "https://github.com/infinum/coding-standards-wp",
  "license": "MIT",
  "authors": [
    {
      "name"    : "Contributors",
      "homepage": "https://github.com/infinum/coding-standards-wp/graphs/contributors"
    }
  ],
  "require": {
    "php": ">=7.1",
    "squizlabs/php_codesniffer": "^3.3.1",
    "phpcompatibility/phpcompatibility-wp": "^2.0",
    "wp-coding-standards/wpcs" : "^2.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0",
    "phpcompatibility/php-compatibility": "^9.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.6.0",
    "roave/security-advisories": "dev-master"
  },
  "suggest": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.6.0 || This Composer plugin will sort out the PHPCS 'installed_paths' automatically."
  },
  "scripts": {
    "install-standards"    : [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --config-set installed_paths ../../..,../../wp-coding-standards/wpcs"
    ],
    "install-standards-dev": [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --config-set installed_paths ../../..,../../wp-coding-standards/wpcs,../../phpcompatibility/php-compatibility"
    ],
    "run-tests": [
      "@php ./vendor/phpunit/phpunit/phpunit --filter Infinum ./vendor/squizlabs/php_codesniffer/tests/AllTests.php"
    ],
    "phpcs-i": [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs -i"
    ],
    "check-cs": [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs"
    ],
    "fix-cs": [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
    ],
    "post-install-cmd": [
      "@install-standards-dev"
    ],
    "post-update-cmd": [
      "@install-standards-dev"
    ]
  },
  "support": {
    "issues": "https://github.com/infinum/coding-standards-wp/issues",
    "source": "https://github.com/infinum/coding-standards-wp"
  }
}
